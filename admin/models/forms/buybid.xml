<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: buybid.xml 74 2010-12-01 22:04:52Z chdemko $ -->
<form>
	<fieldset name="details">
		<field
			name="title"
			type="text"
			label="COM_AUCTION_BUY_BIDS_BIDS"
			description="COM_AUCTION_BUY_BIDS_BIDS"
			class="inputbox"
			size="40"
			required="true"/>

		<field
			name="price"
			type="text"
			label="COM_AUCTION_BUY_BIDS_PRICE"
			description="COM_AUCTION_BUY_BIDS_PRICE"
			class="inputbox validate-numeric"
			size="40"
			required="true"/>

		<field
			name="bids"
			type="text"
			label="COM_AUCTION_BUY_BIDS_COUNT"
			description="COM_AUCTION_BUY_BIDS_COUNT"
			class="inputbox validate-numeric"
			size="40"
			required="true"/>

		<field
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JGLOBAL_STATE"
			description="JFIELD_PUBLISHED_DESC">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
			<option
				value="2">
				JARCHIVED</option>
			<option
				value="-2">
				JTRASHED</option>
			</field>

		<field name="ordering"
			type="periodordering"
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
		/>

		<field name="bids_image"
			   type="file"
			   label="COM_AUCTION_BUY_BIDS_UPLOADIMAGE"
			   description="COM_AUCTION_BUY_BIDS_UPLOADIMAGE_DESC"
			   class="inputbox"
			   size="30"
		/>

		<field
			name="description"
			type="editor"
			label="COM_AUCTION_BUY_BIDS_DESC"
			description="COM_AUCTION_BUY_BIDS_DESC"
			size="40"
			class=""
			validate=""
			required=""
			default=""
			filter="safehtml"
			/>

		<field
			name="id"
			type="hidden"
			label="COM_AUCTION_BUY_BIDS_BIDS"
			description="COM_AUCTION_BUY_BIDS_BIDS"
			class="inputbox"
			size="40"
			/>


	</fieldset>
</form>

