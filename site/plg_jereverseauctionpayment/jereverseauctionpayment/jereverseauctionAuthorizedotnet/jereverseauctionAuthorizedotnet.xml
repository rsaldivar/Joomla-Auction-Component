<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="jereverseauctionpayment">
	<name>JE Reverse Auctionpayment - Authorize.Net</name>
	<license>GNU General Public License v2, see LICENSE.php</license>
	<author>JExtension</author>
	<copyright>[2011] JExtn</copyright>
	<creationDate>May 30, 2011</creationDate>
	<authorEmail>contact@jextn.com</authorEmail>
	<authorUrl>http://www.jextn.com</authorUrl>
	<version>1.0.0 Stable</version>
	<description>JE Reverse Auction Authorizedotnet payment</description>
	<files>
		<filename plugin="jereverseauctionAuthorizedotnet">jereverseauctionAuthorizedotnet.php</filename>
		<folder>jereverseauctionAuthorizedotnet</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">

			<field name="login_id" type="text" default="" label="API Login ID" description="API Login ID"/>
			<field name="transaction_key" type="text" default="" label="Transaction Key" description="Transaction Key"/>
		<field name="account_type" type="radio" default="test" label="Type of this Account" description="Test Account [sandbox] OR Real Account">
		  <option value="test">Test</option>
		  <option value="secure">Real</option>
		</field>
			<field name="currency_code" type="text" size="10"  default="NZD" label="Currency Symbol" description="Currency Symbol"/>
			</fieldset>
		</fields>
	</config>
</extension>